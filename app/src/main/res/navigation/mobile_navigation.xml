    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.city_bus.SideNavigation.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_search"
        android:name="com.example.city_bus.SideNavigation.ui.search.SearchFragment"
        android:label="search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/nav_help"
        android:name="com.example.city_bus.SideNavigation.ui.help.HelpFragment"
        android:label="help"
        tools:layout="@layout/fragment_help" />

    <fragment
        android:id="@+id/nav_logout"
        android:name="com.example.city_bus.user.UserSideNavigation.ui.home.UserHomeFragment"
